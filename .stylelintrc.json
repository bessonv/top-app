{
	"extends": [
		"stylelint-config-standard",
    "stylelint-config-idiomatic-order"
	],
	"ignoreFiles": [
		"out/**/*.css"
	],
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"selector-class-pattern": null,
		"declaration-block-no-redundant-longhand-properties": null,
		"indentation": [
			"tab"
		],
		"color-hex-case": "upper"
	}
}